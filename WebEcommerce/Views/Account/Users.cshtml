@using Microsoft.AspNetCore.Identity;
@using WebEcommerce.Data.Static;
@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "All Users";
}
<style>
    #customers th {
          padding-top: 12px;
          padding-bottom: 12px;
          text-align: left;
        background-color: #a73e6b;
          color: white;
          border: 1px solid #ddd;
    }

</style>
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">HOME</a></li>
        <li class="breadcrumb-item">MENU</li>
        <li class="breadcrumb-item" aria-current="page">USER</li>
    </ol>
</nav>
<body>
<div class="row">
    <div class="col-md-8 offset-md-2">
            
        <br />
        <div align="center">
        <h2 style ="color:#a73e6b;font-size:200%">USER ACCOUNT</h2>
        </div>
        <br />
            <table id="customers" class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(x=>x.Id)</th>
                    <th>@Html.DisplayNameFor(x=>x.FullName)</th>
                    <th>@Html.DisplayNameFor(x=>x.UserName)</th>
                    <th>@Html.DisplayNameFor(x=>x.Email)</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                        <tr>
                            <td>@Html.DisplayFor(x=>item.Id)</td>
                            <td>@Html.DisplayFor(x=>item.FullName)</td>
                            <td>@Html.DisplayFor(x=>item.UserName)</td>
                            <td>@Html.DisplayFor(x=>item.Email)</td>
                        
                        @*<td class="align-middle">                            
                                <form asp-action="DeleteUser" method="post">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this user?')">Delete</button>
                                </form>                            
                        </td>*@
                        </tr>
                }

            </tbody>
        </table>
    </div>
</div>
</body>
