@using WebEcommerce.ViewModels
@model RegisterVM
@{
    ViewData["Title"] = "Register";
}


<style>
    #back {
        width: 100%;
        height: 100%;
        border: 1px solid;
        background-image: linear-gradient(to right,#bf392e,#8d44ad);
    }

    #box {
        height: 550px;
        width: 400px;
        background-color: white;
        box-shadow: 0px 0px 5px #a73e6b;
    }

    #inputform {
        height: 50px;
        width: 350px;
        background-color: #f4f8f7;
        border: 2px solid #f4f8f7;
        border-radius: unset;
    }

    .input {
        background-color: #f4f8f7;
        border: 2px solid
    }

    #icon1 {
        white-space: nowrap;
    }

    #lgn {
        height: 50px;
        width: 350px;
        background-color: white;
        /*background-image: linear-gradient(to right,#bf392e,#8d44ad);*/
        border-radius: unset;
        border: 2px solid #a73e6b;
        color: #a73e6b;
        transition: 0.3s;
    }

        #lgn:hover {
            background-image: linear-gradient(to right,#bf392e,#8d44ad);
            border: none;
            color: white;
        }

</style>

<body id="back" style="border:none;">
    @if (TempData["Error"] != null)
    {
        <div class="col-md-12 alert alert-danger">
            <span><b>Sorry!</b> - @TempData["Error"] </span>
        </div>
    }
    <div class="row">
        <div class="col" align="center">
            <div class="box" id="box">
                <img align="center" src="~/Img/iconna.png" style="width:auto; height:100px;padding-top:20px;" />
                <h1 style="padding-top:10px;padding-bottom:20px;color:#a73e6b;font-size:200%">
                    Create Account
                </h1>
                <form asp-action="Register">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input class="form-control" id="inputform" asp-for="FullName" placeholder="Full Name" autocomplete="off" />
                        <span class="text-danger" asp-validation-for="FullName"></span>
                    </div>
                    <div class="form-group">
                        <input class="form-control" id="inputform" asp-for="EmailAddress" value="E-mail" autocomplete="off" />
                        <span class="text-danger" asp-validation-for="EmailAddress"></span>
                    </div>
                    <div class="form-group">
                        <input class="form-control" id="inputform" asp-for="Password" value=" Password Password" autocomplete="off" />
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                    <div class="form-group">
                        <input class="form-control" id="inputform" asp-for="ConfirmPassword" value=" Password Password" autocomplete="off" />
                        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                    </div>                    
                    <div class="form-group" algin="center">
                        <input class="btn" type="submit" id="lgn" value="Get Started" />
                    </div>                    
                </form>
            </div>

        </div>
    </div>
</body>

