
@model IEnumerable<Category>
@{
ViewData["Title"] = "Index";
}

<!-- View table of Category -->.
<body>

    @if (Context.User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{ <div class="col">
    <div class="text-white" style="padding-left:120px">
        <a asp-action="Create" asp-controller="Categories" class="btn btn-outline-success">
            <i class="fas fa-regular fa-plus-square mr-2"></i>
            Add Category
        </a>
    </div>
        </div>
}
<br />
<div class="row">
    <div class="col-md-9 offset-md-1">
        <table class=" table table-striped table-hover">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(x=>x.Name)</th>
                    <th>@Html.DisplayNameFor(x=>x.Description)</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody id="tblData">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>
                           @* <a class="btn btn-outline-info" asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-regular fa-pencil mr-2"></i></a>*@
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-regular fa-eye mr-2"></i>Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id">
                                <input type="submit" value="Delete" class="btn btn-outline-danger" onclick="return confirm('Delete This Category ?')" />
                                </a>
                        </td>
                    </tr>
                }        
            </tbody>
        </table>

    </div>
</div>


</body>

