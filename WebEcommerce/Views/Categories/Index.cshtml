
@model IEnumerable<Category>
@{
ViewData["Title"] = "Index";
}

<!-- View table of Category -->.

<div class="row">
    <div class="col-md-9 offset-md-1">
        <table class=" table table-striped table-hover">
            <thead>
                <tr>
            
                    <th>@Html.DisplayNameFor(x=>x.Name)</th>
                    <th>@Html.DisplayNameFor(x=>x.Description)</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody id="tblData">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>
                            <a class="btn btn-outline-info"><i class="fas fa-regular fa-pencil mr-2"></i>Edit</a>
                            <a class="btn btn-outline-secondary"><i class="fas fa-regular fa-eye mr-2"></i>Details</a>
                            <a class="btn btn-outline-danger"><i class="fas fa-regular fa-trash mr-2"></i>Delete</a>
                        </td>
                    </tr>
                }
        
            </tbody>
        </table>

    </div>
</div>

<!-- View Create Button -->
<div class="text-white" style="position:fixed;right:50px;bottom:auto;">
    <a asp-action="Create" asp-controller="Categories" class="btn btn-outline-success">
        <i class="fas fa-regular fa-plus-square mr-2"></i>
        Create
    </a>

</div>


