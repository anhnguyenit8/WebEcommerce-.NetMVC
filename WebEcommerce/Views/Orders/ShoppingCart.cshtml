@model IEnumerable<ShoppingCartItem>
@{
    ViewData["Title"] = "Shopping Cart Summary";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <div class="text-center">
            <h2>Shopping Cart Summary</h2>
        </div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Amount</th>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Subtotal</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">@item.Amount</td>
                        <td class="align-middle">@item.Product.Name</td>
                        <td class="align-middle">@item.Product.Price</td>
                        <td class="align-middle">@((item.Product.Price * item.Amount).ToString("c"))</td>
                        <td>
                            <a class="text-danger" asp-controller="Orders" asp-action="RemoveFromCart"
                            asp-route-id="@item.Product.Id">
                                <i class="fas fa-regular fa-minus"></i>
                            </a>
                            <a class="text-warning" asp-controller="Orders" asp-action="AddToCart"
                            asp-route-id="@item.Product.Id">
                                <i class="fas fa-regular fa-plus"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td class="collapse-2"></td>
                    <td><b>Total:</b></td>
                    <td>$@(ViewBag.Total).00</td>
                    <td></td>
                </tr>
            </tfoot>
        </table>
        <div class="text-center">
            <div class="btn btn-group">
                <a class="btn btn-outline-warning mr-3" asp-controller="Products" asp-action="Index">
                    <i class="fas fa-regular fa-refresh mr-2"> Continue Shopping</i>
                </a>| or | 
                <div id="paypal-button"></div>

                @*<a class="btn btn-outline-success" asp-controller="Orders" asp-action="CompleteOrder">
                    <i class="fas fa-regular fa-check mr-2"> Order</i>
                </a>*@

            </div>

        </div>
    </div>
</div>


@*Paypal Sandbox API*@
@section Scripts{
    <script src="https://www.paypalobjects.com/api/checkout.js"></script>
    <script>
        var _total = @Html.Raw(ViewBag.Total);
        paypal.Button.render({
            //Configure Enviroment
            env:'sandbox',
            client:{
                sandbox: 'Afc0UyG6sSiyPfIItQykTxPnK7Uc7dESxnaFdQy96Tq11b7x73ucuinyiA8wCg-MNTdAW5LA4qB1X0L5'                
            },
            //Customize Button
            locale:'en_US',
            style:{
                color:'gold',
                size:'small',
                shape:'pill'
            },
            //Enable Pay Now Checkout
            commit:true,
            //Set Up A Payment 
            payment:function(data,actions){
                return actions.payment.create({
                    transactions:[{
                        amount:{
                            total:_total,
                            currency:'USD'
                        }
                    }]
                });
            },
            //Excute The Payment
            onAuthorize:function(data,actions){
                return actions.payment.get().then(function(){
                  var url = '@Url.Action("CompleteOrder", "Orders", new{} )';
                  window.location.href = url;
                });
            }
        }, "#paypal-button");
    </script>
}