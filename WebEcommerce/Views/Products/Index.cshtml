@model IEnumerable<Product>
@{
    ViewData["Title"] = "Product";
}
@{
    var categoryId = 0;
}
<style>


    #dtl {
        transition: 0.3s;        
        padding-left:10px;
    }

        #dtl:hover {
            background-color: #a1407b;
            color: white;
        }

    #atc {
        transition: 0.3s;
        
    }

    #atc:hover {
            background-color: #a1407b;
            color: white;
    }

    #edt {
        border: 1px solid limegreen;
        color: limegreen;
        
    }


    #del {
        border: 1px solid red;
        color: red;
        
    }
     
    #crt-prd{
        border-radius:30px;
        background-color: #8d44ad;
        color: white;
        
        
    }
   
       

    #cardProduct {
        transition: 0.2s;     
        padding: 10px;
        color:dimgray;
    }

    #cardProduct:hover {
        
        /*color: white;*/
        background-color:white;       
        border-radius: 10px;
    }
    
    #btn1 {
        /*border-radius: 40px;*/        
        transition: 0.3s;
        
    }

    

    #btn1:hover {
        
        color: white;
        background-color: #bf392e;
    }

    #mnf{        
        border-radius: 10px;        
        width: auto;
        height: 30px;
        
    }
    p span {
        white-space: nowrap;
    }

    #title {
        font-size: 40px;
        background-image: linear-gradient(to right,#bf392e,#8d44ad);
        border-radius: 30px;
        color: white;
    }

    #ulid {
        background-image: linear-gradient(to right,#94429b,#8d44ad);
        border-radius: 10px;        
        max-width:fit-content;
        height: 0%;
        list-style-type: none;
        padding: 20px;
        
    }
    #lid a{
        color:white;
    }
    #imglogo{
        max-width:auto;
        height:40px;
        padding:5px;
        border: 2px solid white;
        border-radius:30px;
    }
    hr{
        background-color:white;
    }

    #sticky {
        position: -webkit-sticky;
        position: sticky;
        top :170px ;
    }

    #img-prd{
        transition: transform .2s;
    }
        #img-prd:hover{
        transform: scale(1.1);
    }
    #img2{
        max-width:auto;
        height:350px;        
    }
        

</style>

<body>
    <div style="padding-bottom:10px;">
        <img id="img2" src="~/Img/wall.jpg" />
    </div>

    <div class="btn1" align="center" id="title">
        <h2><b> PRODUCT LIST </b></h2>
    </div>
    
    <div id="sticky" style="float:right;">
        <div >
            <form class="form-inline" asp-action="Index" asp-controller="Products" style="padding:10px; ">                    
                    <ul id="ulid">
                    <h style="color:white">PRODUCT FILLTER</h>
                    <hr />
                    <li id="lid"><a asp-action="Index" asp-controller="Products">ALL</a></li>
                    <li id="lid"><a asp-action="ProductsByCategory" asp-route-categoryId="1">VGA</a></li>
                    <li id="lid"><a asp-action="ProductsByCategory" asp-route-categoryId="2">MAIN</a></li>
                    <li id="lid"><a asp-action="ProductsByCategory" asp-route-categoryId="3">SDD</a></li>
                    <li id="lid"><a asp-action="ProductsByCategory" asp-route-categoryId="4">HDD</a></li>                    
                    <li id="lid"><a asp-action="ProductsByCategory" asp-route-categoryId="5">RAM</a></li>
                    <li id="lid"><a asp-action="ProductsByCategory" asp-route-categoryId="6">CPU</a></li>                    
                    <li id="lid"><a asp-action="ProductsByCategory" asp-route-categoryId="8">SPU</a></li>                    
                    <li id="lid"><a asp-action="ProductsByCategory" asp-route-categoryId="9">CASE</a></li>
                    <li id="lid"><a asp-action="ProductsByCategory" asp-route-categoryId="7">COOLERFAN</a></li>
                    </ul>                    
              </form>         
         </div>
    </div>
    

    <br />
        
    <div class="row">
        @foreach (var item in Model)
        {            
            <div class="col-md-3">    
                <div class="card">
                    @if (Context.User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <span class="alert" style="border-radius:20px;">
                            <a class="btn btn-sm float-left" id="edt" asp-action="Edit" asp-controller="Products" asp-route-id="@item.Id">
                                Edit
                            </a>
                        <a asp-action="Delete" asp-route-id="@item.Id">
                                <input type="submit" value="Delete" class="btn btn-sm float-right" id="del" onclick="return confirm('Delete This Product ?')" />
                    </a>
                        </span>
                    }
                        <div id="cardProduct">
                    <div id="img-prd">
                    <a asp-action="Details" asp-route-id="@item.Id">
                        <img src="@item.ImageURL" alt="@item.Name" style="width:auto; height:250px; padding-bottom:10px;">
                    </a>
                    </div>
                             
                
                    <div class="text-sm-left"  id="inf">
                        <p><h><b>@item.Name</b></h></p>
                        <hr />                   
                        <p>UPC : @item.Description</p>
                        <p>Type : <b>@item.Category.Name</b></p>
                        <p>Manufacturer : <b>@item.ProductType</b></p>
                        <p>Price : <b>@item.Price.ToString("c")</b></p>
                    </div>
                            <a class="btn" id="dtl" style="font-size:12px; padding-right:20px;" asp-action="Details" asp-route-id="@item.Id">
                            <i class="fa-solid fa-circle-info mr-2"></i>DETAIL</a>

                            <a class="btn" id="atc" style="font-size:12px" asp-controller="Orders" asp-action="AddToCart" asp-route-id="@item.Id">
                            <i class="fas fa-regular fa-shopping-basket mr-2"></i>ADD TO CART</a>
                    </div>
                    </div>
            </div>
        
        }
    </div>
    <br />
    <br />
    <br />
    <br />
    <br />



@if (Context.User.Identity.IsAuthenticated && User.IsInRole("Admin"))
  {
    <div class="text-white" style="position:fixed;right:30px;bottom:70px;">
            <a asp-action="Create" asp-controller="Products" class="btn float-right" id="crt-prd">
            <i class="fas fa-regular fa-plus-square mr-2"></i>
            NEW PRODUCT
        </a>
    </div>
  }

</body>

@*Filter Product*@
@section Scripts{
    <script type="text/javascript">
        $(function(){
        $("#productType").chosen();
        });
        </script>
}
