@model IEnumerable<Product>
@{
    ViewData["Title"] = "Listing Product";
}

<div class = "row">
    @foreach (var item in Model)
    {
        <div class="col-md-3">
            <div class="card">
                <img src="@item.ImageURL" alt="@item.Name" style="width:90%;height:200px;">
                <h4><b>@item.Name</b></h4>
                <p>@item.Price.ToString("c")</p>
                <p>@item.Description</p>
                <p style="color:@item.ProductType">@item.ProductType</p>
                <p>@item.Category.Name</p>
                <button>Add To Cart</button>
            </div>
        </div>
    }
</div>

<style>
    .card{
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        max-width: 300px;
        margin: auto;
        text-align: center;
        font-family: arial;
    }
    .card:hover {
        box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
    }

    .price{
        color: grey;
        font-size: 22px;
    }

    .card button{
        border: none;
        outline: 0;
        padding: 12px;
        color: white;
        background-color: orangered;
        text-align: center;
        cursor: pointer;
        width: 100%;
        font-family:'Franklin Gothic Medium';
        font-size: 15px;
    }

    .card button:hover{
        opacity: 0.7;
    }

</style>
